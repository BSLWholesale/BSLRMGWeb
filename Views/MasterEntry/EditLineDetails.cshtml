                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Select Section</b></label>
                                    <select class="form-control" id="ddlSection" name="ddlSection">
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Line Code</b></label>
                                    <input type="text" id="txtLineCode" name="txtLineCode" class="form-control" />
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Seq No</b></label>
                                    <input type="text" id="txtSeqNo" name="txtSeqNo" class="form-control" />
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Name</b></label>
                                    <input type="text" id="txtLineName" name="txtLineName" class="form-control" />
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Super Visor</b></label>
                                    <input type="text" id="txtSupervisor" name="txtSupervisor" class="form-control" />
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label"><b>Super Market Code</b></label>
                                    <input type="text" id="txtSuperMarketcode" name="txtSuperMarketcode" class="form-control" />
                                </div>
                            </div>


                            <div class="col-sm-4">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="form-label"><b>Use In Quality</b></label><br />
                                            <input type="checkbox" id="chkUseInQuality" name="chkUseInQuality" value="Use In Quality" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="form-label"><b>Is Finishing</b></label><br />
                                            <input type="checkbox" id="chkIsFinishing" name="chkIsFinishing" value="Is Finishing" />
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-sm-12">
                                <button type="submit" id="btnLineUpdate" name="btnLineUpdate" class="btn btn-primary pull-right" onclick="Fn_Update_LineDetails_By_LineID();">Update</button>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>
</section>


