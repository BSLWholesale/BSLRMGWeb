
@{
    ViewBag.Title = "Process";
}

@{
    <script type="text/javascript">

        $(document).ready(function () {

            $("#dvAddProcess").hide();
            $("#dvViewProcess").show();
            $("#spnHeading").html("View Operator");

            $("#spnView").hide();
            $("#spnAdd").show();
            Fn_Get_ProcessMaster(0, "No");

        });



        function Fn_Insert_New_Process() {

            var clsProcessMaster = {};

            var strMSG = "";
            if ($('#btnSubmit').val() == "Submit") {
                strMSG = "Process added successfully";
            }
            else {
                strMSG = "Process updated successfully";
                clsProcessMaster.ID = $("#hdnID").val();
            }

            clsProcessMaster.ProcessName = $("#txtProcessName").val();

            if ($('#chkIsProduction').is(':checked')) {
                clsProcessMaster.IsProduction = true;
            } else {
                clsProcessMaster.IsProduction = false;
            }


            clsProcessMaster.CreatedBy = sessionStorage.getItem("LogInID");



            if (clsProcessMaster.ProcessName == "") {
                Swal.fire({ title: "", text: "Please Enter Process Name", icon: "error" });
            }
            else {
                $.ajax({
                    type: "POST",
                    url: '/MasterEntry/Fn_Insert_New_Process',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify(clsProcessMaster),
                    beforeSend: function () {
                        $('#btnSubmit').attr('disabled', 'disabled');
                    },
                    success: function (data) {
                        var obj = JSON.parse(data.message);
                        if (obj.vErrorMsg == "Success") {
                            Swal.fire({ title: "", text: strMSG, icon: "success" });
                            Fn_Reset_Control();
                            $('#btnSubmit').val("Submit");
                            $("#dvAddProcess").hide();
                            $("#dvViewProcess").show();
                            $("#spnHeading").html("View Process");

                            $("#spnView").hide();
                            $("#spnAdd").show();
                            Fn_Get_ProcessMaster(0, "No");
                        }
                        else {
                            Swal.fire({ title: "", text: obj.vErrorMsg, icon: "error" });
                        }

                    },
                    complete: function (data) {
                        $('#btnSubmit').removeAttr('disabled');
                    },
                    error: function (err) {
                        Swal.fire({ title: "", text: err, icon: "error" });
                    }
                });
            }
        }

        function Fn_Reset_Control() {
            $("#txtProcessName").val("");
            $("#chkIsProduction").prop('checked', false);
            $("#hdnID").val("");

            $("#btnSubmit").val("");
            $("#btnSubmit").val("Submit");
        }

        function Show_dvViewProcess() {

            $("#dvAddProcess").hide();
            $("#dvViewProcess").show();
            $("#spnHeading").html("View Process");

            $("#spnView").hide();
            $("#spnAdd").show();
            Fn_Get_ProcessMaster(0, "No");
        }

        function Fn_Show_dvAddProcess() {

            $("#dvAddProcess").show();
            $("#dvViewProcess").hide();
            $("#spnHeading").html("Add New Process");
            $("#spnView").show();
            $("#spnAdd").hide();
        }


        function Fn_Get_ProcessMaster(id, edit) {

            var clsProcessMaster = {};
            clsProcessMaster.CreatedBy = sessionStorage.getItem("LogInID");
            if (edit == "Yes") {
                clsProcessMaster.ID = id;
            }

            $("#tbodyProcessRow").html('');
            var html = '';

            $.ajax({
                type: "POST",
                url: "/MasterEntry/Fn_Get_ProcessMaster",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsProcessMaster),
                success: function (data) {
                    var obj = JSON.parse(data.message);
                    if (obj[0].vErrorMsg == "Success") {
                        if (edit == "Yes") {

                            $("#hdnID").val(obj[0].ID);
                            $("#txtProcessName").val(obj[0].ProcessName);
                            debugger;
                            if (obj[0].IsProduction == true) {
                                $("#chkIsProduction").prop('checked', true);
                            } else {
                                $("#chkIsProduction").prop('checked', false);
                            }

                            $("#dvAddProcess").show();
                            $("#dvViewProcess").hide();
                        }
                        else {
                            for (var i = 0; i < obj.length; i++) {

                                html += "<tr>";
                                html += "<td>" + obj[i].ID + "</td>";
                                html += "<td>" + obj[i].ProcessName + "</td>";
                                html += "<td>" + obj[i].IsProduction + "</td>";
                                html += "<td>" + obj[i].CreatedOn + "</td>";
                                html += "<td>";
                                html += "<a href='javascript: void (0);' class='btn btn-xs btn-info'><i class='fa fa-edit' onclick='Fn_Edit_Process(" + obj[i].ID + ")'></i></a>";
                                html += "&nbsp;&nbsp;<a href='javascript: void (0);' class='btn btn-xs sharp btn-danger'><i class='fa fa-trash' onclick=\"Fn_Delete_Process('" + obj[i].ID + "')\"></i></a>";
                                html += "</td>";
                                html += "</tr>";
                            }
                        }
                    }
                    else {
                        html += "<tr><td colspan='4' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";

                    }
                    $("#tbodyProcessRow").append(html);

                },
                error: function (err) {
                    Swal.fire({ title: "", text: err, icon: "error" });

                }
            });
        }

        function Fn_Edit_Process(id) {
            var strID = id;
            var edit = "Yes";
            $("#btnSubmit").val("");
            $("#btnSubmit").val("Update");
            $("#dvAddProcess").show();
            $("#dvViewProcess").hide();
            $("#spnHeading").html("Update Process");
            $("#spnView").show();
            $("#spnAdd").hide();

            Fn_Get_ProcessMaster(strID, edit);
        }


        function Fn_Delete_Process(Id) {
            //Swal.fire({ title: "", text: 'you are not authorized.', icon: "error" });

            var clsProcessMaster = {};
            clsProcessMaster.ID = Id;
            clsProcessMaster.CreatedBy = sessionStorage.getItem("LogInID");

            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to delete?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/MasterEntry/Fn_Delete_Process",
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        data: JSON.stringify(clsProcessMaster),
                        success: function (data) {
                            var obj = JSON.parse(data.message);
                            if (obj.vErrorMsg == "Success") {
                                Swal.fire({ title: "Deleted!", text: "Process name has been deleted successfully.", icon: "success" });
                                Fn_Get_ProcessMaster(0, "No");
                            }
                            else {
                                Swal.fire({ title: "", text: obj.vErrorMsg, icon: "error" });
                            }
                        },
                        error: function (err) {
                            alert(err);
                        }
                    });
                }
                else {
                    return false;
                }
            });
        }

    </script>
}

<section id="main-content">
    <section class="wrapper">
        <div class="row page-titles mx-0">
            <div class="col-sm-8"><span><a href="@Url.Action("Dashboard", "Home")"><i class="fa fa-home"></i> Dashboard</a> </span> > <span id="spnHeading">View Operator</span></div>

            <div class="col-sm-4">
                <span id="spnView"><i class="btn btn-primary btn-xs pull-right fa fa-eye" onclick="Show_dvViewProcess();"></i></span>
                <span id="spnAdd" style="display: none;"><i class="btn btn-primary btn-xs pull-right fa fa-plus-circle" onclick="Fn_Show_dvAddProcess();"></i></span>
            </div>

        </div>

        <div class="row" style="margin-top: 1%; display: none;" id="dvAddProcess">
            <div class="col-xl-12 col-xxl-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="form-label">Process</label>
                                    <input type="text" id="txtProcessName" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label class="form-label">IsProduction</label><br />
                                    <input type="checkbox" id="chkIsProduction" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-6">

                                <input type="submit" style="margin-top: 20px;" class="btn btn-primary" id="btnSubmit" value="Submit" onclick="Fn_Insert_New_Process();" />
                                <input type="submit" style="margin-top: 20px;" class="btn btn-danger" id="btnReset" value="Reset" onclick="Fn_Reset_Control();" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="margin-top: 1%; display: none;" id="dvViewProcess">
           
            <div class="col-xl-12 col-xxl-12 col-sm-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-responsive text-nowrap">
                            <thead>
                                <tr style="background-color: #E1C16E; background-image: linear-gradient(to bottom, #722F37, #DB5A6A); color: white; ">
                                    <th>ID</th>
                                    <th>Process Name</th>
                                    <th>Is Production</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyProcessRow">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
</section>
<input type="hidden" id="hdnID" value="" />

