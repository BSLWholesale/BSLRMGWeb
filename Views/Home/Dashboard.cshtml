<script type="text/javascript">

    $(document).ready(function () {
        var EmpRole = sessionStorage.getItem("EmpRole");

        if (EmpRole == "Admin") {
            $("#WorkerattendenceCount").show();
            $("#ProductionCount").show();
            $("#BreakdownCount").show();
        }
        else {
            $("#WorkerattendenceCount").hide();
            $("#ProductionCount").hide();
            $("#BreakdownCount").hide();
        }

    });

</script>

